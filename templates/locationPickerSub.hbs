<form id="vn-location-picker-sub">
    <h3 class="lps-title">{{localize "visual-novel-dialogues.locationPickerSub.location.imageHeader"}}</h3>
    <div class="form-group">
        <span class="lps-span">{{localize "visual-novel-dialogues.locationPickerSub.image-path"}}</span>
        <div class="form-fields">
            <button type="button" class="lps-file-picker" title="{{localize "visual-novel-dialogues.locationPickerSub.image-button"}}">
                <i class="fas fa-file-import"></i>
            </button>
            <input class="image lps-choose-img" type="text" placeholder="path/image.png" value="{{backgroundImage}}">
        </div>
    </div>
    <h3 class="lps-title" style="margin-top: 9px;">{{localize "visual-novel-dialogues.locationPickerSub.location.nameHeader"}}</h3>
    <div class="form-group">
        <div class="form-fields">
            <input class="lps-loc-input" type="text" placeholder="{{localize "visual-novel-dialogues.locationPickerSub.location.namePlaceholder"}}" value="{{locName}}">
        </div>
    </div>
    <h3 class="lps-title" style="margin-top: 9px;">{{localize "visual-novel-dialogues.locationPickerSub.location.parNameHeader"}}</h3>
    <div class="form-group">
        <div class="form-fields">
            <input class="lps-par-input" type="text" placeholder="{{localize "visual-novel-dialogues.locationPickerSub.location.parNamePlaceholder"}}" value="{{parName}}">
        </div>
    </div>
